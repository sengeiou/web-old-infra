<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.3.xsd
	">

	<context:component-scan base-package="org.yoara.framework.component" />

	<import resource="classpath:spring-basic-import.xml" />
	<!-- 参数验证器  -->
	<bean id="validationPoolBean" class="org.yoara.framework.component.web.common.validation.pool.ValidationPoolBean">
		<property name="maxIdle" value="10"/>
		<property name="maxTotal" value="50"/>
		<property name="usePool" value="false"/>
	</bean>
</beans>

